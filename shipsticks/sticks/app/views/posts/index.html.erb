<% title "Posts" %>

<table>
  <tr>
    <th>Products</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%= post.name %></td>
      <td><%= post.type %></td>
      <td><%= post.length %></td>
      <td><%= post.width %></td>
      <td><%= post.height %></td>
      <td><%= post.weight %></td>
      <td><%= link_to "Show", post %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path %></p>
